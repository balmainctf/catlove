extends ../layout
block content
    .container
    	.row
    		table.table.table-hover.table-bordered
    			thead
    				tr
    					th name
    					th doctor
    					th country
    					th year
    					th createdAt
    					th show
    					th edit
    			tbody
    				each item in movies
    					tr(class="item-id-#{item._id}")
    						td #{item.title}
    						td #{item.doctor}
    						td #{item.country}
    						td #{item.year}
    						td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
    						td: a(target="_blank",href="") show
    						td: a(target='_blank',href="") edit